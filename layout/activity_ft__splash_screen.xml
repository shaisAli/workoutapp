<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llspashscreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgsplashicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dip"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/icon_200x200" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/txtFlashlight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="@string/Flashlight"
        android:textColor="@color/textwhitecolor"
        android:textSize="@dimen/textdoubleextralargesize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtplus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/textwhitecolor"
        android:textSize="@dimen/textlargesize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtTorch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="60dip"
        android:gravity="center"
        android:text="@string/Torch"
        android:textColor="@color/textwhitecolor"
        android:textSize="@dimen/textdoubleextralargesize"
        android:textStyle="bold" />

</LinearLayout>